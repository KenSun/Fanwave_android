<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<RelativeLayout android:gravity="center_vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:padding="5dp" >
		
		<!-- Avatar Image View -->
		<ImageView android:id="@+id/avatar_imageview"
			style="@style/avatar_small"
			android:layout_width="50dp"
			android:layout_height="50dp" />
		
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginLeft="6dp" 
			android:layout_toRightOf="@+id/avatar_imageview" 
			android:layout_alignTop="@+id/avatar_imageview" 
			android:layout_alignBottom="@+id/avatar_imageview">
			
			<!-- Nickname Text View -->	
			<TextView android:id="@+id/nickname_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="kencoolkencoolkencoolkencoolkencoolkencool"
				android:textSize="15sp"
				android:textColor="@color/light_blue" 
				android:textStyle="bold"
				android:singleLine="true" />

		</LinearLayout>		
		
	</RelativeLayout>
	
	<!-- Divider Image View -->
	<ImageView android:id="@+id/divider_imageview" style="@style/list_divider" />	
	
</LinearLayout>