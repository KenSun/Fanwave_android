<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="82dip" 
	android:orientation="horizontal" >
	
	<TextView android:id="@+id/guide_epg_program_time_textview" 
			  android:layout_width="0dip" android:gravity="center_vertical|center_horizontal"
				android:layout_height="fill_parent" 
				android:layout_weight="1" 
				android:text="065" 
				android:textColor="@color/gray" 
				android:textSize="14dip" />
			
		
	<RelativeLayout 
		android:layout_width="0dip" 
		android:layout_height="82dip" 
		android:layout_weight="2" >
		
		
		<LinearLayout android:id="@+id/guide_epg_icon_linearlayout" 
			android:layout_width="30dip" 
			android:layout_height="fill_parent" 
			android:orientation="vertical" 
			android:paddingLeft="8dip" 
			android:paddingRight="8dip" 
			android:paddingTop="4dip" 
			android:paddingBottom="4dip" >
			
			<ImageView android:id="@+id/guide_epg_follow_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_follow_n" 
				android:scaleType="fitXY" 
				android:layout_marginTop="4dip" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_reminder_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_reminder_n" 
				android:scaleType="fitXY" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_hot_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_hot_n" 
				android:scaleType="fitXY" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_films_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_films_n" 
				android:scaleType="fitXY" />
		</LinearLayout>
		
		<LinearLayout 
			android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="fill_parent" 
			android:orientation="vertical" 
			android:layout_toRightOf="@+id/guide_epg_icon_linearlayout" 
			android:layout_marginLeft="4dip"  >
		
			<TextView android:id="@+id/guide_epg_program_title_textview" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="2011 溫布頓網球賽" 
				android:textColor="@color/gray" 
				android:textSize="14dip" 
				android:textStyle="bold" 
				android:singleLine="true"  />
			<TextView android:id="@+id/guide_epg_program_detail_textview" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:minHeight="20dp" 
				android:text="Male semi-finals" 
				android:textColor="#7a7a7a" 
				android:textSize="12dip" 
				android:layout_marginTop="5dip" />
			
		</LinearLayout>

		
		
		<Button android:id="@+id/guide_epg_add_imagebutton" 
				android:layout_width="40dip" 
				android:layout_height="40dip" 
				android:layout_alignParentBottom="true" 
				android:layout_alignParentRight="true" 
				android:background="@drawable/guide_epg_add_btn_selector" />
		<ImageView 
			 	android:layout_width="wrap_content" 
			 	android:layout_height="wrap_content" 
			 	android:background="@drawable/guide_straight_line" 
			 	android:scaleType="fitXY" 
			 	android:layout_gravity="right" />		
	</RelativeLayout>
</LinearLayout>