<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:orientation="vertical" 
	android:gravity="center"
	android:layout_gravity="center"  >
	
	<FrameLayout android:id="@+id/avatar_layout"
		android:layout_width="86dp" 
		android:layout_height="86dp" >
		
		<!-- Avatar Image View -->
		<ImageView android:id="@+id/avatar_imageview" 
			android:layout_width="80dip" 
			android:layout_height="80dip" 
			android:layout_gravity="center"
			android:background="@drawable/frame_selector" 
			android:src="@drawable/avatar_loading" 
			android:scaleType="fitXY" 
			android:padding="4dp" />
			
		<!-- Selected Image View -->
		<ImageView android:id="@+id/selected_imageview" 
			android:layout_width="40dp" 
			android:layout_height="40dp" 
			android:layout_marginRight="1dp" 
			android:layout_gravity="bottom|right" 
			android:src="@drawable/selected_selector" 
			android:scaleType="fitXY" />
			
	</FrameLayout>
	
	<!-- Nickname Text View -->
	<TextView android:id="@+id/nickname_textview" 
		android:layout_width="75dp" 
		android:layout_height="35dp" 
		android:layout_marginTop="-4dp"
		android:gravity="center_horizontal|top" 
		android:layout_gravity="center"
		android:text="Kencool Kencool" 
		android:lines="2"
		android:textColor="@color/light_blue" 
		android:textSize="12sp" 
		android:textStyle="bold" />
</LinearLayout>