<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/fanwave_background_white"  >
	
	<!-- Title Bar Layout -->
	<RelativeLayout android:id="@+id/title_bar_layout" style="@style/title_bar_layout">
			
		<RelativeLayout android:id="@+id/title_sense_region"
            style="@style/title_bar_sense_region" >
            <!-- Title Image View -->
            <ImageView android:id="@+id/title_imageview"
            style="@style/title_bar_image" />
            
            <!-- Title Text View -->	
            <TextView android:id="@+id/title_textview"
			style="@style/title_bar_text"
			android:text="@string/about_title" />
        </RelativeLayout>
			
						
		<!-- Back Image Button -->
		<ImageButton android:id="@+id/back_imagebutton" 
			style="@style/title_bar_back"
			android:src="@drawable/home_icon" />
						
	</RelativeLayout>	    
	    
	    	
	<RelativeLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:background="@drawable/about_background" 
		    android:layout_marginTop="-2dp" >
		
	    
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				android:orientation="vertical" 
				android:gravity="center">
				
				<ImageView 
					android:layout_width="200dp" 
					android:layout_height="90dp" 
					android:src="@drawable/fanwave_logo_large" 
					android:scaleType="fitXY" />
				
	            <TextView android:id="@+id/version_textview"
					android:layout_width="fill_parent" 
                	android:layout_height="wrap_content"
                 	android:textStyle="bold"
                	android:textSize="12dp"
                	android:text="Version" 
                	android:gravity="center"
                	android:textColor="@color/orange"/>			    

	             <TextView 
					android:layout_width="fill_parent" 
                	android:layout_height="wrap_content"
                 	android:layout_marginTop="20dp"
                 	android:textStyle="bold"
                	android:textSize="12dp"
                	android:textColor="@color/dark_brown"
                	android:text="@string/about_message_1" 
                	android:gravity="center"/>	
                	
               <TextView 
					android:layout_width="fill_parent" 
                	android:layout_height="wrap_content"
                	android:layout_marginTop="10dp"
                	android:textSize="10dp"
                	android:text="@string/about_message_2" 
                	android:textColor="@color/dark_brown"
                	android:gravity="center"/>
               
				<LinearLayout android:id="@+id/contact_us_linearlayout"
						android:layout_marginTop="40dp"
						android:layout_width="140dp"
						android:layout_height="40dp"
						android:background="@drawable/about_contact_btn_selector"
						android:gravity="center"
						android:clickable="true" >
					
						<ImageView 
							android:layout_width="17dip"
							android:layout_height="17dip"
							android:layout_marginLeft="2dip"
							android:layout_marginRight="10dip"
							android:src="@drawable/about_contact_icon"
							android:scaleType="fitXY"
							android:layout_gravity="center"
							android:duplicateParentState="true" />
						
						<TextView 
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/about_contactus_btn"
							android:textSize="12sp"
							android:textColor="@color/orange"
							android:textStyle="bold"
							android:layout_gravity="center"
							android:duplicateParentState="true" />
				
				</LinearLayout>	 			
		</LinearLayout>
	    

	    	<ImageView 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:src="@drawable/fanwave_footer_wildmind" 
					android:layout_marginBottom ="10dp"
					android:gravity="center" 
					android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>