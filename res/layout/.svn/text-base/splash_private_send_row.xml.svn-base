<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="80dp"
	android:paddingRight="5dp"
	android:paddingTop="5dp" 
	android:gravity="right" >
	
	<RelativeLayout android:id="@+id/content_layout"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:paddingLeft="50dp"  >
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:src="@drawable/dialog_receive" 
			android:scaleType="fitXY" 
			android:layout_alignBottom="@+id/content_linearlayout" 
			android:layout_alignRight="@+id/content_linearlayout" 
			android:layout_alignLeft="@+id/content_linearlayout"/>
		
		<LinearLayout android:id="@+id/content_linearlayout"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:paddingRight="20dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp" 
			android:layout_centerVertical="true" 
			android:orientation="vertical" 
			android:gravity="right" 
			android:paddingLeft="10dp" >
			<!-- Content Text View -->
			<TextView android:id="@+id/content_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:text="Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。Don't do that。"
				android:textSize="14sp"
				android:textColor="@color/gray" />
				
			<!-- Created Time Text View -->
			<TextView android:id="@+id/created_time_textview"	
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp" 
				android:text="yy/mm/dd hh:mm:ss"
				android:textColor="@color/light_blue"
				android:textSize="10sp"/>
		</LinearLayout>	
		
		
	</RelativeLayout>
	
	<!-- Avatar Image View -->
	<ImageView android:id="@+id/avatar_imageview"
		style="@style/avatar_small" 
		android:layout_width="50dp"
		android:layout_height="50dp" />
	
</LinearLayout>