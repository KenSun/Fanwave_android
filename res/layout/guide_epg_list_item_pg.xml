<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/guide_epg_icon_relativelayout" 
		android:layout_width="fill_parent" 
		android:layout_height="82dip" >	
		
		<LinearLayout android:id="@+id/guide_epg_icon_linearlayout" 
			android:layout_width="30dip" 
			android:layout_height="fill_parent" 
			android:orientation="vertical" 
			android:paddingLeft="2dip" 
			android:paddingRight="8dip" 
			android:paddingTop="4dip" 
			android:paddingBottom="4dip" >
			
			<ImageView android:id="@+id/guide_epg_follow_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_follow_n" 
				android:scaleType="fitXY" 
				android:layout_marginTop="4dip" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_reminder_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_reminder_n" 
				android:scaleType="fitXY" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_hot_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_hot_n" 
				android:scaleType="fitXY" 
				android:layout_marginBottom="4dip" />
			<ImageView android:id="@+id/guide_epg_films_imageview" 
				android:layout_width="wrap_content" 
				android:layout_height="0dip" 
				android:layout_weight="1" 
				android:src="@drawable/guide_epg_program_films_n" 
				android:scaleType="fitXY" />
		</LinearLayout>
		
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="82dip" 
			android:orientation="vertical" 
			android:layout_toRightOf="@+id/guide_epg_icon_linearlayout" 
			android:layout_marginLeft="4dip" 
			android:paddingTop="14dp" >
		
			<TextView android:id="@+id/guide_epg_program_title_textview" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="2011 溫布頓網球賽" 
				android:textColor="@color/gray" 
				android:textSize="14dip" 
				android:textStyle="bold" 
				android:singleLine="true" 
				android:gravity="center_vertical" />
			<TextView android:id="@+id/guide_epg_program_detail_textview" 
				android:layout_width="fill_parent" 
				android:layout_height="18dp" 
				android:minLines="1"
				android:text="Male semi-finals" 
				android:textColor="#7a7a7a" 
				android:textSize="12dip" 
				android:singleLine="true" 
				android:gravity="center_vertical" 
				android:layout_marginTop="2dp" 
				android:layout_marginBottom="4dp" />
			<TextView android:text="20:00~23:00"
			 	android:id="@+id/guide_epg_program_time_textview" 
			 	android:textSize="12dip" 
			 	android:textColor="#7a7a7a" 
				android:singleLine="true" 
			 	android:layout_width="fill_parent" 
			 	android:gravity="center_vertical" 
			 	android:layout_height="wrap_content" />
		</LinearLayout>
		
		
		<Button android:id="@+id/guide_epg_add_imagebutton" 
			android:layout_width="40dip" 
			android:layout_height="40dip" 
			android:layout_alignParentBottom="true" 
			android:layout_alignParentRight="true" 
			android:background="@drawable/guide_epg_add_btn_selector" />
</RelativeLayout>
